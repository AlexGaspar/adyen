process do |files|
  if files.any? { |f| f =~ /lib\/.+\.rb$/ }
    execute "yardoc --no-private"
    execute(%{osascript -e 'tell application "Safari"
      do JavaScript "window.location.reload()" in first document
    end tell'})
  end
end

